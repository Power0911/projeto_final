<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".introducao">

    <Button
        android:id="@+id/btn_Comecar"
        android:layout_width="155dp"
        android:layout_height="56dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="106dp"
        android:backgroundTint="#03A9F4"
        android:text="Começar"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="262dp"
        android:layout_height="56dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="56dp"
        android:text="Swap Veichle"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/images2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="379dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Bem Vindo ao Swap veichle. Esta aplicação é para você saber que tipos de performance que pode melhorar o seu veiculo."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>